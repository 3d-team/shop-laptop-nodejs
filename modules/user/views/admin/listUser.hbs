<div class="row">

    <nav aria-label="You are here:" role="navigation">
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li class="disabled">Người dùng</li>
            <li>
                <span class="show-for-sr">Current: </span> Danh sách
            </li>
        </ul>
    </nav>

</div>

<div class="row">
    &nbsp;
</div>

<div class="row">

    <div class="large-6 columns">
        <div class="callout success">
            <p>
                <strong>Số lượng danh mục</strong>
            </p>
            <div class="text-right">
                <div class="stat">€250.00</div>
            </div>
        </div>
    </div>

    <div class="large-6 columns">
        <div class="callout primary">
            <p>
                <strong>Số lượng sản phẩm</strong>
            </p>
            <div class="text-right">
                <div class="stat">7</div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="large-12 columns">
        <a href="/users/admin/add" class="success button">Thêm</a>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <div class="card " style="wid`: 100%;">
            <div class="card-divider clearfix">
                Danh sách đơn hàng
                <i data-tooltip title="Click for More" class="float-right more-button fa fa-ellipsis-h"
                    aria-hidden="true"></i>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên người dùng</th>
                        <th>Loại tài khoản</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th style="width: 12%;" class="text-center">Ngày cập nhật</th>
                        <th style="width: 22%;" class="text-center">#</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.username}}</td>
                        <td>{{#if this.admin}} Quản trị {{else}} Khách hàng {{/if}}</td>
                        <td>{{this.email}}</td>

                        <td class="text-center">
                            <label class="label success">
                                <i class="fa fa-check-circle-o" aria-hidden="true"></i>&nbsp;Hoạt động
                            </label>
                        </td>

                        <!-- <td class="text-center">
										<label class="label success">
											<i class="fa fa-arrow-up" aria-hidden="true"></i>&nbsp;Up&nbsp;<i class="fa fa-arrow-up" aria-hidden="true"></i>
										</label>
									</td> -->
                        <td class="text-center">
                            {{this.created_at}}
                        </td>
                        <td class="text-center">
                            <a href="/users/admin/update/{{this.id}}" class="button warning m-0" href="#">Sửa</a>
                            <a href="/users/admin/delete/{{this.id}}" class="button alert m-0" href="#">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
            <div class="card-section">
                <small>
                    Số lượng:
                </small>
            </div>
        </div>
    </div>
</div>