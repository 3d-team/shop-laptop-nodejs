<div class="row">

    <nav aria-label="You are here:" role="navigation">
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li class="disabled">Sản phẩm</li>
            <li>
                <span class="show-for-sr">Current: </span> Danh sách
            </li>
        </ul>
    </nav>

</div>

<div class="row">
    &nbsp;
</div>

<div class="row">

    <div class="large-6 columns">
        <div class="callout success">
            <p>
                <strong>Số lượng danh mục</strong>
            </p>
            <div class="text-right">
                <div class="stat">€250.00</div>
            </div>
        </div>
    </div>

    <div class="large-6 columns">
        <div class="callout primary">
            <p>
                <strong>Số lượng sản phẩm</strong>
            </p>
            <div class="text-right">
                <div class="stat">7</div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="large-12 columns">
        <a href="/products/admin/add" class="success button">Thêm</a>
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <div class="card " style="width: 100%;">
            <div class="card-divider clearfix">
                Danh sách sản phẩm
                <i data-tooltip title="Click for More" class="float-right more-button fa fa-ellipsis-h"
                    aria-hidden="true"></i>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá tiền</th>
                        <th style="width: 12%;" class="text-center">Ngày cập nhật</th>
                        <th style="width: 22%;" class="text-center">#</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.quantity}}</td>
                            <td class="text-right">{{this.price}}VND</td>
                            <!-- <td class="text-center">
                                            <label class="label success">
                                                <i class="fa fa-arrow-up" aria-hidden="true"></i>&nbsp;Up&nbsp;<i class="fa fa-arrow-up" aria-hidden="true"></i>
                                            </label>
                                        </td> -->
                            <td class="text-center">
                                {{ this.created_at }}
                            </td>
                            <td class="text-center">
                                <a href="/products/admin/update/{{ this.id }}" class="button warning m-0" href="#">Sửa</a>
                                <a href="/products/admin/delete/{{ this.id }}" class="button alert m-0" href="#">Xóa</a>
                            </td>
                        </tr>
                    {{/each}}
                    

                </tbody>
            </table>

            <nav aria-label="Pagination">
              <ul class="pagination">
                <li class="pagination-previous disabled"><span class="show-for-sr">page</span></li>
                <li><a href="/products/admin/list/1" aria-label="Page 1">1</a></li>
                <li><a href="/products/admin/list/2" aria-label="Page 2">2</a></li>
                <li><a href="/products/admin/list/3" aria-label="Page 3">3</a></li>
                <li class="pagination-next">
                    <a href="#" aria-label="Next page"><span class="show-for-sr">page</span></a>
                </li>
              </ul>
            </nav>
        </div>
    </div>
</div>