                    <h1>Danh sách các sản phầm trong giỏ hàng</h1>
                </div>
            </div>
        </div>
        {{#each data}}
            <div class="cart-item" id={{this.product_id}}>
                <div>
                    <img src="/images/asus-rog-zephyrus-g14.jpg" alt="Item 1">
                </div>
                
                <div class="cart-item-detail">
                    <h4>{{this.name}}</h4>
                    <h5>{{this.unit}}.VND</h5>
                    <h6>Số lượng:
                        <input type="number"  value={{this.quantity}}>
                    </h6>
                </div>
                <div class="">
                    <input class="delete-button" type="button" value="Xóa">
                </div>
            </div>
        {{/each}}

